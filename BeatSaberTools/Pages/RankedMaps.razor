@inherits ReactiveComponent

@page "/ranked"

<MapBrowser Maps="MapList">
    <HeaderContent>
        <RankedMapBrowserHeader></RankedMapBrowserHeader>
    </HeaderContent>
    <RowContent>
        <RankedMapBrowserRow Map="context"></RankedMapBrowserRow>
    </RowContent>
</MapBrowser>

@code {
    [Inject]
    protected MapService MapService { get; set; }

    IEnumerable<Map> MapList { get; set; } = new List<Map>();

    protected override void OnInitialized()
    {
        SubscribeAndBind(MapService.RankedMaps, maps => MapList = maps);
    }
}