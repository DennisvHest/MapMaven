@inherits ReactiveComponent

<MudDialog Style="width: 600px">
    <TitleContent></TitleContent>
    <DialogContent>
        <MudTextField
            @bind-Value="BeatSaberInstallLocation"
            Variant="Variant.Outlined"
            Label="Beat Saber install location"
            Adornment="Adornment.End"
            AdornmentIcon="@Icons.Filled.DriveFileMove"
            OnAdornmentClick="PickFolder">
        </MudTextField>
        <MudTextField
            @bind-Value="PlayerId"
            Variant="Variant.Outlined"
            Label="ScoreSaber player ID / URL">
        </MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Class="ma-3" OnClick="SaveInititalSetup">Start</MudButton>
    </DialogActions>
</MudDialog>