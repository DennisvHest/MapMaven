    </MudTableSortLabel>
</MudTh>
<MudTh></MudTh>
<MudTh>
    <MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="new Func<Map, object>(x => x.ScoreEstimate.Any() ? x.ScoreEstimate.Max(x => x.PPIncrease) : 0)">
