@inherits ReactiveComponent

@page "/"
@*
<MapBrowser Maps="MapList">
    <HeaderContent>
        <MapBrowserHeader></MapBrowserHeader>
    </HeaderContent>
    <RowContent>
        <MapBrowserRow Map="context.Map"></MapBrowserRow>
    </RowContent>
</MapBrowser>*@

@code {
    [Inject]
    protected MapService MapService { get; set; }

    IEnumerable<Map> MapList { get; set; } = new List<Map>();

    protected override void OnInitialized()
    {
        SubscribeAndBind(MapService.Maps, maps => MapList = maps);
    }
}